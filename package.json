{
  "name": "github-projects-md-sync",
  "version": "0.1.0",
  "description": "A tool to sync GitHub Project V2 items with local markdown files",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "mocha -r ts-node/register tests/**/*.test.ts",
    "lint": "prettier --check .",
    "clean": "rimraf dist",
    "example": "ts-node examples/examples-integration.ts",
    "example:sync:test": "mocha -r ts-node/register examples/tests/md-to-project.test.ts",
    "example:project:test": "mocha -r ts-node/register examples/tests/project-to-md.test.ts"
  },
  "keywords": [
    "github",
    "project",
    "markdown",
    "sync"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@octokit/graphql": "^7.0.1",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/debug": "^4.1.12",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.4.5",
    "mocha": "^10.2.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
